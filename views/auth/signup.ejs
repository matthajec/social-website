<%- include('../partial/head.ejs') %>
  <form class="ui form" action="/signup" method="POST">
    <% if(errorMsg) { %>
      <div class="ui red message"><%= errorMsg %></div>
    <% } %>

    <h1 class="first header">Sign Up</h1>

    <div class="field">
      <label>Desired Username</label>
      <input type="text" name="uname" placeholder="Username" value="<% if(oldValues) { %><%= oldValues.uname %><% } %>">
    </div>

    <div class="field">
      <label>Email</label>
      <input type="text" name="email" placeholder="Email" value="<% if(oldValues) { %><%= oldValues.email %><% } %>">
    </div>

    <div class="field">
      <label>Name</label>
      <div class="two fields">
        <div class="field">
          <input type="text" name="fname" placeholder="First Name" value="<% if(oldValues) { %><%= oldValues.fname %><% } %>">
        </div>
        <div class="field">
          <input type="text" name="lname" placeholder="Last Name" value="<% if(oldValues) { %><%= oldValues.lname %><% } %>">
        </div>
      </div>
    </div>

    <div class="field">
      <label>Password</label>
      <input type="password" name="pass" placeholder="Password">
    </div>

    <div class="field">
      <label>Verify Password</label>
      <input type="password" name="verifyPass" placeholder="Verify Password">
    </div>

    <input type="hidden" name="_csrf" value="<%= csrfToken %>">

    <button class="ui blue button" type="submit">Sign Up</button>
  </form>
  <script>
  $('.ui.form')
    .form({
      on: 'blur',
      inline: true,
      fields: {
        email     : inputRuleSet.email,
        uname     : inputRuleSet.username,
        fname     : inputRuleSet.legalName,
        lname     : inputRuleSet.legalName,
        pass      : inputRuleSet.password,
        verifyPass: inputRuleSet.verifyPassword
      }
    })
  </script>
<%- include('../partial/footer.ejs') %>